@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <style>

        .d-block {
            width: 1220px;
            height: 380px;
        }

        .news-cards {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            margin: 20px 0;
        }
        .news-cards img {
            width: 80%;
            height: 200px;
        }
        body {
            background: url(../Imagenes/index/fondo.jpg);
            padding: 2px 20px 2px 20px;
            font-family: 'Oswald', sans-serif;
        }
    </style>
</head>
<body>
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner"  style="width : 1200px; height: 400px; ">
                <div class="carousel-item active">
                    <img src="~/Imagenes/index/img1.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Imagenes/index/img2.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Imagenes/index/img3.png" class="d-block w-100" alt="...">
                </div>
            </div>
        </div>
        <div class="news-cards">
            <div>
                <img src="~/Imagenes/index/fact.png" alt="" />
                <h3>Facturar</h3>
                <p>
                    Realizar una factura de la compra que se ha hecho
                </p>
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ventas">facturar</a>
            </div>
            <div>
                <img src="~/Imagenes/index/wats.png" alt="" />
                <h3>Contactar con la central.</h3>
                <p>
                    Si tiene dudas o preguntas puede comunicarse con la central
                </p>
                <a href="https://wa.me/+50256971717?text=Hola%20necesito%20información%20sobre%20un%20producto%20o%20fallo%20en%20el%20sistema">Contactar<i class="fas fa-angle-double-right"></i></a>
            </div>
            <div>
                <img src="~/Imagenes/index/descanso.png" alt="" />
                <h3>Salir del usuario</h3>
                <p>
                    Recuerda salir de la pagina si ya no va a trabajar, evitemos el fraude de ventas.
                </p>
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="login">Salir<i class="fas fa-angle-double-right"></i></a>
            </div>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />
    </div>
</body>
</html>


